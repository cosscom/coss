{
  "name": "cosscom",
  "version": "0.0.1",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint --",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rm -rf .turbo && rm -rf node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "turbo": "^2.5.5",
    "typescript": "5.9.2"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "bun lint --fix",
      "bun test --bail --findRelatedTests"
    ]
  },
  "packageManager": "bun@1.3.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20"
  }
}
