{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "files": [
    {
      "content": "import { useId } from \"react\"\n\nimport { Label } from \"@/registry/default/ui/label\"\nimport {\n  Select,\n  SelectContent,\n  SelectItem,\n  SelectTrigger,\n  SelectValue,\n} from \"@/registry/default/ui/select\"\n\nexport default function Component() {\n  const id = useId()\n  return (\n    <div className=\"*:not-first:mt-2\">\n      <Label htmlFor={id}>Select with description and right indicator</Label>\n      <Select defaultValue=\"2\">\n        <SelectTrigger id={id} className=\"**:data-desc:hidden\">\n          <SelectValue placeholder=\"Choose a plan\" />\n        </SelectTrigger>\n        <SelectContent className=\"[&_*[role=option]]:ps-2 [&_*[role=option]]:pe-8 [&_*[role=option]>span]:start-auto [&_*[role=option]>span]:end-2\">\n          <SelectItem value=\"1\">\n            Standard Plan\n            <span\n              className=\"mt-1 block text-xs text-muted-foreground\"\n              data-desc\n            >\n              Ideal for individuals\n            </span>\n          </SelectItem>\n          <SelectItem value=\"2\">\n            Pro Plan\n            <span\n              className=\"mt-1 block text-xs text-muted-foreground\"\n              data-desc\n            >\n              For professional users\n            </span>\n          </SelectItem>\n          <SelectItem value=\"3\">\n            Enterprise Plan\n            <span\n              className=\"mt-1 block text-xs text-muted-foreground\"\n              data-desc\n            >\n              Built for large teams\n            </span>\n          </SelectItem>\n        </SelectContent>\n      </Select>\n    </div>\n  )\n}\n",
      "path": "registry/default/components/comp-224.tsx",
      "type": "registry:component"
    }
  ],
  "meta": {
    "tags": ["label", "select", "radix"]
  },
  "name": "comp-224",
  "registryDependencies": [
    "https://coss.com/origin/r/select.json",
    "https://coss.com/origin/r/label.json"
  ],
  "type": "registry:component"
}
